
---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Contacto" description="Escribinos para soporte o presupuestos.">
  <h1 class="text-3xl font-bold">Contacto</h1>
  <form class="card p-6 mt-4 grid md:grid-cols-2 gap-4" method="post" action="#">
    <div><label class="label">Nombre</label><input class="input" type="text" required /></div>
    <div><label class="label">Email</label><input class="input" type="email" required /></div>
    <div class="md:col-span-2"><label class="label">Mensaje</label><textarea class="input" rows="5" required></textarea></div>
    <div class="md:col-span-2"><button class="btn-primary" type="submit">Enviar</button></div>
  </form>
</BaseLayout>

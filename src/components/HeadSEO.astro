---
export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  type?: "website" | "article" | "product";
  ogImage?: string;
  schema?: any[];
}

const {
  title,
  description = "CuentasDigitales.com.ar â€” Ayuda y cuentas premium para servicios digitales en Argentina.",
  canonical = Astro.url.pathname,
  type = "website",
  ogImage = "/og-default.png",
  schema = [],
} = Astro.props;

const site = Astro.site?.toString().replace(/\/$/, "") ?? "";
const url = site ? `${site}${canonical}` : canonical;

// Si ogImage viene relativo ("/og-default.png"), lo convertimos a absoluto cuando hay site.
// (No es obligatorio, pero ayuda a OG/Twitter)
const ogImageUrl =
  site && ogImage?.startsWith("/") ? `${site}${ogImage}` : ogImage;
---

<title>{title}</title>

<meta name="description" content={description} />
<link rel="canonical" href={url} />

<link rel="alternate" hreflang="es-AR" href={url} />
<link rel="alternate" hreflang="x-default" href={url} />

<meta property="og:type" content={type} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={ogImageUrl} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />

{schema?.map((s) => (
  <script
    type="application/ld+json"
    set:html={JSON.stringify(s)}
  />
))}

<link rel="stylesheet" href="/fonts/inter.css" />

